{ 
  "webdriver": {
    "start_process" : true,
    "server_path": "./bin/geckodriver-0.23",
    "cli_args": [
      "--log", "debug"
    ],
    "port": 4444
  },

  "test_settings" : {
    "default" : {
      "desiredCapabilities": {
        "browserName" : "firefox",
        "acceptInsecureCerts": true
      }
    },
      "FirefoxHeadless": {
          "desiredCapabilities": {
            "browserName": "firefox",
            "acceptInsecureCerts": true,
            "moz:firefoxOptions": {
              "args": ["--headless"]
            }
          }
        }
  }
}